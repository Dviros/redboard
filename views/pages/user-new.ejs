<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>    
</head>

<body>
    <div id="wrapper">
		 <% include ../partials/header %>		            		            		            		                		 
           		 		 
		         <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
			<div class="panel">
			</div>
			<ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i> Dashboard 
                            </li>
			    <li class="active">
				<i class="fa fa-sign-in"></i> New User
			    </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
		        
		        
<!-- SIGNUP -->   
<div class="row">
	<div class="col-lg-3">

		<!-- show any messages that come back with authentication -->
		<% if (message.length > 0) { %>
			<div class="alert alert-danger"><%= message %></div>
		<% } %>

		<!-- LOGIN FORM -->
		<form action="#" method="post">
			<div class="form-group">
				<label>Username</label>
				<input type="text" id="myUsername" class="form-control" name="username">
			</div>
			<div class="form-group">
				<label>Password</label>	
				<input type="password" class="form-control" name="password">	
			</div>
			
			<div class="form-group">
				<label>IS Admin</label>
				<div class="form-group">
					<label class="radio-inline">
						<input type="radio" name="optionsRadiosInline" id="true" value="true" >yes
					</label>
					<label class="radio-inline">
						<input type="radio" name="optionsRadiosInline" id="false" value="false" checked>no
					</label>
				</div>					
			</div>
			                           			
			<button type="submit" class="btn btn-warning">Add</button>
		</form>

		
	</div>
</div>
<!-- SIGNUP -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    
    <% include ../partials/footer %>
    
	<script type="text/javascript">
	$(document).ready(function(){
		$("#filter").keyup(function(){
	 
			// Retrieve the input field text and reset the count to zero
			var filter = $(this).val(), count = 0;
	 
			// Loop through the comment list
			$("select option").each(function(){
	 
				// If the list item does not contain the text phrase fade it out
				if ($(this).text().search(new RegExp(filter, "i")) < 0) {
					$(this).fadeOut();
	 
				// Show the list item if the phrase matches and increase the count by 1
				} else {
					$(this).show();
					count++;
				}
			});
		});
	});
	</script>	    
    
</body>

</html>

