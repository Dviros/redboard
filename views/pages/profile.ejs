<!-- views/pages/profile.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>

    <div id="wrapper">
		 <% include ../partials/header %>
		<div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel">
                        </div>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="/project-dashboard">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-file"></i> Profile
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

                <!-- show any messages that come back from update -->
				<% if (message.length > 0 ) { %>
                    <div class="alert alert-warning"><%= message %></div>
                <% } %>

				<div class="well">
					<h3><span class="fa fa-user"></span> Local</h3>

						<p>
							<strong>username</strong>: <%= user.local.username %><br>
							<strong>password</strong>: <%= user.local.password %><br>
							
								<form action="/profile" method="post">						
        							<div class="form-group">
            							<label>New Password</label>
           								 <input type="password" class="form-control" name="password" />
                                         <input type="hidden" value=<%= user.local.username %> name="username" />
        							</div>

        							<button type="submit" class="btn btn-warning">Update</button>
    							</form>
 
						</p>

				</div>
			</div>

	</div>
   
	<% include ../partials/footer %>
    
</body>

</html>

